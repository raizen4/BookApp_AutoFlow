<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:viewModels="clr-namespace:BookApp_AutoFlow.ViewModels"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:xaml="http://schemas.mauimicromvvm.com/2022/dotnet/maui"
               x:Class="BookApp_AutoFlow.Views.BookDetailPage"
               xaml:MauiMicro.Autowire="True"
               x:DataType="viewModels:BookDetailsPageViewModel">
        <Grid Padding="10">
            <StackLayout Spacing="10">
                <Label  Text="{Binding Book.Title}"  />
                <Label  Text="{Binding Book.Author}"  />
                <Label  Text="{Binding Book.PublicationYear}"  />
                <Label  Text="{Binding Book.Description}"  />
            </StackLayout>
        </Grid>
</ContentPage>